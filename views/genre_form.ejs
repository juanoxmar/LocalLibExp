<%- include('header'); %>

<h1><%= title %></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="name">Genre: </label>
    <input
      id="name"
      class="form-control"
      type="text"
      placeholder="Fantasy, Poetry etc."
      name="name"
      value="<%= undefined === locals.genre ? '' : genre.name %>"
      required
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<%- include('errors'); %> <%- include('footer'); %>
